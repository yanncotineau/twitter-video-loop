{
  "manifest_version": 3,
  "name": "Twitter Video Loop",
  "version": "1.0.0",
  "description": "Adds a loop button to X/Twitter videos and lets you loop them by default.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Twitter Video Loop",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["index.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
